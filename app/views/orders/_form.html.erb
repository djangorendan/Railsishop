<style media="screen">
  .field {
    padding-bottom: 10px;
  }
</style>

  <div class="row">
    <div class="col-4">
      <%= form_with(model: order, local: true) do |form| %>
        <% if order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

            <ul>
            <% order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= telephone_field_tag 'phone', (current_user.phone if current_user), placeholder: 'Телефон', class: "form-control", required: true %>
        </div>
        <div class="field">
          <%= email_field_tag 'email', (current_user.email if current_user), placeholder: 'Адрес электронной почты', class: "form-control", required: true %>
        </div>
        <div class="field">
          <%= text_field_tag 'first_name', (current_user.first_name if current_user), placeholder: 'Имя', class: "form-control", required: true %>
        </div>
        <div class="field">
          <%= text_field_tag 'last_name', (current_user.last_name if current_user), placeholder: 'Фамилия', class: "form-control", required: true %>
        </div>
        <div class="field">
          <%= form.select :payment, raw(
            "<option>Наличными</option>
            <option>На карту Приват Банка</option>
            <option>Наложенный платеж</option>"
          ), {prompt: "Способ оплаты"}, {class: "form-control"} %>
        </div>
        <div class="field">
          <%= form.select :delivery, raw(
            "<option>Самовывоз</option>
            <option>Доставка Новой Почтой</option>"
          ), {}, {class: "form-control"} %>
        </div>
        <div class="delivery" style="display: none;">
            <input type="radio" name="delivery" value="departament" id="departament" checked>
            <label for="departament">На отделение</label>
            <input type="radio" name="delivery" value="address" id="address">
            <label for="address">На адрес</label>

          <div class="field">
            <%= text_field_tag :city, (current_user.city if current_user), list: "city_name", class: "form-control", placeholder: "Город" %>
              <datalist id="city_name">
                <option value="Boston">
                <option value="Cambridge">
              </datalist>
          </div>

          <div class="field" style="display: block" id="departament_field">
            <%= text_field_tag :departament, (current_user.departament if current_user), list: "departament_name", class: "form-control", placeholder: "Отделение Новой Почты" %>
              <datalist id="departament_name">
                <option value="№1 - тута">
                <option value="№2 - тама">
              </datalist>
          </div>

          <div class="field" style="display: none" id="address_field">
            <%= text_field_tag :departament, (current_user.departament if current_user), list: "address_name", class: "form-control", placeholder: "Адрес" %>
              <datalist id="address_name">
                <option value="улица тута">
                <option value="проспект тама">
              </datalist>
          </div>
        </div>

        <div class="field">
          <%= form.text_area :discription, placeholder: "Примичания", class: "form-control" %>
        </div>

        <%= form.submit "Оформить заказ", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
    <div class="col-8">
      <table class="table table-hover">
        <thead>
        </thead>
        <tbody>
          <% @cart.cart_products.each do |cart_product| %>
            <tr>
              <td><%= link_to image_tag(cart_product.product.attachments.first.category_main_image_thumb.url), cart_product.product %></td>
              <td class="text-left">
                <div><%= link_to cart_product.product.name, cart_product.product %></div>
                <div style="font-size: 0.5rem"><%= cart_product.product.summary %></div>
              </td>
              <td>
                <%= cart_product.product_count %>
              </td>
              <td><%= cart_product.product.price %> грн.</td>
              <td id="product_<%= cart_product.product.id %>_sum"><%= cart_product.total_product_sum %> грн.</td>
            </tr>
          <% end %>
            <tr>
              <td colspan="4"></td>
              <td colspan="1" id="total_cart_sum"><%= @cart.total_cart_sum %> грн.</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

<script type="text/javascript">
  $('#address').on('click', function(){
    $('#address_field').css('display', 'block');
    $('#departament_field').css('display', 'none');
  });
  $('#departament').on('click', function(){
    $('#address_field').css('display', 'none');
    $('#departament_field').css('display', 'block');
  });

  $('#order_delivery').on('change', function(){
    if($(this).val() == 'Доставка Новой Почтой'){
      $('.delivery').css('display', 'block');
    }else{
      $('.delivery').css('display', 'none');
    }
  });
</script>
