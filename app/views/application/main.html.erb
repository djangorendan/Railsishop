      <%= image_tag(carousel_images.first.image.url, class: "d-block w-100") %>
    </div>
    <% carousel_images.each do |carousel_image| %>
      <div class="carousel-item">
        <%= image_tag(carousel_image.image.url, class: "d-block w-100") %>
      </div>
    <% end %>
