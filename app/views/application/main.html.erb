    <span class="sr-only">Next</span>
  </a>
</div>

<h2>Категории:</h2>
<div class="row">
  <% categories.order(:id).each do |category| %>
    <div class="col-3">
      <div class="card text-center">
        <%= link_to image_tag(category.image.url, alt: category.name, class: "img"), category %>
      </div>
    </div>
  <% end %>
</div>

