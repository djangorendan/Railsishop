    </div>
    <div class="col-md-auto text-right" style="margin-top: 15px;">
      <% if current_user %>
        <%= link_to "Личный кабинет", orders_path, class: "btn btn-primary", style: "color: yellow;" %>
        <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "btn btn-dark", style: "color: yellow;" %>
      <% else %>
        <!-- Button trigger modal -->
        <button type="button" style="color: yellow;" class="btn btn-primary" data-toggle="modal" data-target="#registrationModal">
          Авторизация
        </button>
      <% end %>
    </div>
