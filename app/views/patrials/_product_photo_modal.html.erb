<style media="screen">
  .modal-content,
  .modal-dialog {
    max-height: calc(378px + 6rem + 1px);
  }

</style>

<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="photoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="photoModalLabel"><%= @product.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
          <div class="row">
            <div class="col-3" style="overflow-y: auto; height: 378px;">
              <ul class="carousel-indicators">
                <% @product.product_photos.each do |photo| %>
                  <li id="photo_indecator_<%= photo.id %>" class="photo_indecator" data-target="#carouselExampleIndicators" data-slide-to="0">
                    <%= image_tag(photo.image.url, width: '100%', height: '112px') %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-9">
              <div class="carousel-inner">
                <% @product.product_photos.each do |photo| %>
                  <div class="carousel-item" id="photo_<%= photo.id %>">
                    <%= image_tag(photo.image.url, width: '100%', height: '378px') %>
                  </div>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
