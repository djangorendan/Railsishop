<style media="screen">

  .product_photo_modal .modal-dialog,
  .product_photo_modal .modal-content {
    max-width: 1200px;
    margin: 1.75rem auto;
    max-height: calc(100vh - 1.75rem * 2);
  }

  .product_img_modal {
    width: 100%;
    object-fit: contain;
  }

  .img_wrapper {
    max-height: calc(100vh - 1.75rem * 2 - 2rem - 63px);
  }

  .img_wrapper_2 {
    max-height: calc(100vh - 1.75rem * 2 - 4rem - 63px);
  }

</style>

<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="photoModalLabel" aria-hidden="true">
  <div class="product_photo_modal modal-dialog" role="document">
    <div class="product_photo_modal modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="photoModalLabel"><%= @product.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body img_wrapper">
        <div id="carouselExampleIndicators" class="carousel slide img_wrapper_2" data-ride="carousel" data-interval="false">
          <div class="row img_wrapper">
            <div class="d-md-none d-lg-block col-lg-2 img_wrapper_2" style="">
              <ul class="carousel-indicators">
                <% @product.product_photos.each_with_index do |photo, index| %>
                  <li id="photo_indecator_<%= photo.id %>" class="photo_indecator" data-target="#carouselExampleIndicators" data-slide-to="<%= index %>">
                    <%= image_tag(photo.image.url, width: '100%', height: '112px') %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-lg-10 col-12 img_wrapper_2">
              <div class="carousel-inner img_wrapper_2">
                <% @product.product_photos.each do |photo| %>
                  <div class="carousel-item img_wrapper_2" id="photo_<%= photo.id %>">
                    <%= image_tag(photo.image.url, class: "product_img_modal img_wrapper_2") %>
                  </div>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function windowSize(){
    if ($(window).width() <= '1200'){
      $('.product_photo_modal').css("max-width", "96%");
    } else {
      $('.product_photo_modal').css("max-width", "1200px");
    };
  };

  $(window).on('load resize',windowSize);
</script>
