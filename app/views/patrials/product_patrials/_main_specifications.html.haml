.row.main_specifications
  - @product.properties.roots.order(:position).each do |property|
    - property.children.main_properties.order(:position).each do |child|
      - if child.product_properties.find_by(product: @product).value?
        .col-6= child.name
        .col-6= child.product_properties.find_by(product: @product).value
