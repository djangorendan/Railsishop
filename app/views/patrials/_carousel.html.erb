<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% carousel_images.each_with_index do |carousel_image, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="active"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag(carousel_images.first.image.url, width: "100%", height: "245px") %>
    </div>
    <% carousel_images.drop(1).each do |carousel_image| %>
      <% if carousel_image.image? %>
        <div class="carousel-item">
          <%= image_tag(carousel_image.image.url, width: "100%", height: "245px") %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
