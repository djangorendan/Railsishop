<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="registrationModalLabel">Авторизация</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "users/sessions/new" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark" style="color:yellow;" data-dismiss="modal">Закрыть</button>
        <%= link_to "Регистрация", new_registration_path(resource_name), class: "btn btn-primary", style: "color:yellow;" %>
        <%= link_to "Забыл пароль?", new_password_path(resource_name), class: "btn btn-primary", style: "color:yellow;" %>
      </div>
    </div>
  </div>
</div>
