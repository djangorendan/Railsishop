<%= form_for [:admin, property] do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= form.text_field :position %>
  </div>

  <div class="field">
    <%= form.label :parent_id %>
    <%= form.collection_select :parent_id, Property.roots, :id, :name, :prompt => true %>
  </div>

  <div class="field">
    <%= form.label :display_filter %>
    <%= form.check_box :display_filter %>
  </div>

  <div class="field">
    <%= form.label :display_product %>
    <%= form.check_box :display_product %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'New Property', new_admin_property_path %>
