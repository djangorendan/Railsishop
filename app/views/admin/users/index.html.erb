<h1>База клиентов</h1>

<div class="row">
  <div class="col-9">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Имя</th>
          <th scope="col">e-mail</th>
          <th scope="col">Телефон</th>
          <th scope="col">Статус</th>
          <th scope="col">Получает рассылку?</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <th>Еще не введено</th>
            <th>Еще не введено</th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-3 text-right">
    Поиск
  </div>
</div>
