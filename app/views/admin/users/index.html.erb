<h1>База клиентов</h1>

<div class="col-7">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">mail</th>
        <th scope="col">phone</th>
        <th scope="col">status</th>
