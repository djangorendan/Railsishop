<style media="screen">
  .auth_field {
    padding-bottom: 10px;
  }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="auth_field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Адрес электронной почты", class: "form-control" %>
  </div>

  <div class="auth_field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Пароль", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions" style="padding-top: -10px;">
    <%= f.submit "Авторизироваться", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
