<% content_for :head do %>
  <title><%= @product.name %> | Angar.kh.ua</title>
<% end %>

<style media="screen">
  .breadcrumb-item {
    font-size: 0.6rem;
  }

  .image_button {
    cursor: pointer;
  }

  .specs {
    padding-inline-start: 1.5rem;
  }

  .photo_indecator.active {
    border: 3px solid #007bff;
    width: calc(100% - 6px);
  }

  .carousel-indicators {
    position: relative;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 15;
    display: block;
    justify-content: center;
    padding-left: 0;
    margin-right: -5px;
    margin-left: 0;
    list-style: none;
  }

  .carousel-indicators li {
    box-sizing: content-box;
    -ms-flex: 0 1 auto;
    flex: 0 1 auto;
    width: 100%;
    height: 100%;
    margin-right: 0px;
    margin-left: 0px;
    text-indent: 0px;
    margin-bottom: 10px;
    cursor: pointer;
    background-color: #fff;
    background-clip: padding-box;
    border-top: 0;
    border-bottom: 0;
    opacity: 1;
    transition: opacity .6s ease;
  }

  .text-on-img {
    position: absolute;
    width: 96%;
    top: 145px;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    text-align: center;
    color: yellow;
  }

  .product_img {
    max-width: 97%;
    height: 200px;
    object-fit: contain;
  }

  .btn-outline-primary.button-detail:hover {
    color: yellow;
  }

</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb" style="margin-bottom: 0.5rem">
    <li class="breadcrumb-item"><a href="/">Главная</a></li>
    <li class="breadcrumb-item"><%= link_to @product.category.name, @product.category %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
  </ol>
</nav>

<h1>
  <div>
    <%= @product.product_properties.product_type.value.to_s %>
    <%= @product.name %>
  </div>
  <div style="font-size: 15px"><%= @product.summary %></div>
</h1>

<ul class="discription-navbar nav nav-tabs" id="myTab" role="tablist" style="padding-top: 10px;">
  <li class="nav-item text-center" style="width: 25%;">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#discription" role="tab" aria-controls="discription" aria-selected="true">Фото</a>
  </li>
  <li class="nav-item text-center" style="width: 50%;">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#specifications" role="tab" aria-controls="specifications" aria-selected="false">Технические характеристики</a>
  </li>
  <li class="nav-item text-center" style="width: 25%;">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="comments" aria-selected="false">Комментарии (<%= @product.product_comments.count %>)</a>
  </li>
</ul>
<div class="row">
  <div class="col-8">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="discription" role="tabpanel" aria-labelledby="home-tab">
        <h2>Фото:</h2>
        <div class="row">
          <div class="col-3">
            <% @product.product_photos.not_main.each do |photo| %>
              <a data-toggle="modal" data-target="#photoModal" class="image_button" data-id="<%= photo.id %>">
                <%= image_tag(photo.image.url, width: '100%', height: '93px', alt: @product.name, style: "padding-bottom: 8px;") %>
              </a>
            <% end %>
          </div>
          <div class="col-9">
            <% @product.product_photos.main.each do |photo| %>
              <a data-toggle="modal" data-target="#photoModal" class="image_button" data-id="<%= photo.id %>">
                <%= image_tag(photo.image.url, width: '100%', alt: @product.name) %>
              </a>
            <% end %>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="specifications" role="tabpanel" aria-labelledby="profile-tab">
        <h2>Технические характеристики:</h2>
        <ul>
          <% @product.properties.roots.each do |property| %>
            <li><%= property.name %>:</li>
            <ul>
              <% property.children.order(:position).each do |child| %>
                <% if child.product_properties.find_by(product: @product).value? %>
                  <li><%= child.name %>: <%= child.product_properties.find_by(product: @product).value %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </ul>
      </div>
      <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="contact-tab">
        <h2>Комментарии:</h2>
        <% @product.product_comments.each do |comment| %>
          <div class="card">
            <div class="card-header">
              <div class="row justify-content-between">
                <div class="col-6 text-left">
                  <%= comment.user.first_name %> <%= comment.user.last_name %>
                </div>
                <div class="col-6 text-right">
                  <a href="<%= product_like_comment_path(comment_id: comment.id, product_id: @product.id) %>" style="color: yellow" data-remote="true">
                    <i class="fas fa-thumbs-up"></i>
                  </a>
                  <span id="like_<%= comment.id %>"><%= comment.like %></span>
                  <a href="<%= product_dislike_comment_path(comment_id: comment.id, product_id: @product.id) %>" style="color: yellow" data-remote="true">
                    <i class="fas fa-thumbs-down"></i>
                  </a>
                </div>
              </div>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= comment.comment %></li>
            </ul>
          </div>
        <% end %>
        <%= form_tag(product_create_product_comment_path(product_id: @product.id), method: :get) do %>
          <%= hidden_field_tag(:user_id, value = current_user.id) if current_user %>
          <%= text_area_tag :comment, nil, rows: 8, class: "form-control" %>
          <div class="text-right">
            <%= submit_tag "Оставить комментарий", class: "btn btn-primary", style: "margin-top: 10px; color: yellow;" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="text-right" style="font-size: 0.7rem;">Индекс: <%= @product.id %></div>
    <div class="text-center" style="font-size: 2.5rem;"><%= @product.price %> грн.</div>
    <% if @product.display %>
      <%= form_tag product_to_cart_carts_path, method: 'get', class: 'row', style: 'margin: 0', remote: true do %>
        <%= hidden_field_tag(:product_id, value = @product.id) %>
        <%= number_field_tag(:product_count, '1',min: 1, max: @product.quantity, id: "product_quantity", class: "form-control col-3", style: "margin-right: 10px;") %>
        <%= submit_tag("В корзину", class: "btn btn-primary col-auto", style: "color: yellow") %>
      <% end %>
    <% else %>
      <h4 style="color: red;">Нет в наличии</h4>
    <% end %>
  </div>
</div>
<div class="">
  <h2>Описание:</h2>
  <div style="padding-left: 15px">
    <%= @product.discription.html_safe %>
  </div>
  <% if @products.count >= 3 %>
    <h2>Подобные товары:</h2>
    <div class="owl-carousel owl-theme">
      <% @products.each do |product| %>
        <div class="item">
          <div class="card text-center">
            <div class="text-on-img text-center">
              <h5 class="card-title" style="margin: 0;"><%= link_to product.name, product, style: "color: yellow;" %></h5>
              <div class="product-summary">
                <p class="card-text" style="color: yellow !important;"><%= product.summary %></p>
              </div>
            </div>
            <% product.product_photos.main.each do |photo| %>
              <%= link_to image_tag(photo.image.url, alt: product.name, class: "product_img"), product, class: "img_wrapper" %>
            <% end %>
            <div class="card-body">
              <p class="card-text text-right" style="font-size: 1.5rem"><%= product.price %> грн.</p>
              <div class="row justify-content-between">
                <%= link_to "Подробнее", product, class: "btn btn-outline-primary button-detail col-5", style: "margin: 0 10px;" %>
                <% if product.display? %>
                  <%= link_to "В корзину", product_to_cart_carts_path(product_id: product.id), remote: true, class: "btn btn-warning col-5", style: "margin: 0 10px; color: #007bff; background-color: yellow; border-color: yellow;" %>
                <% else %>
                  <span class="btn btn-danger col-5 disabled" style="margin: 0 10px; color: #007bff;">Не имеется</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>

<!-- PhotoModal -->
<%= render "patrials/product_photo_modal" %>

<script>
  $('.image_button').on('click', function(){
    photo_id = $(this).attr('data-id');
    $('#photo_'+photo_id).addClass("active");
    $('#photo_indecator_'+photo_id).addClass("active");
  });
  $('#photoModal').on('hidden.bs.modal', function () {
    $('.carousel-item').removeClass('active');
    $('.photo_indecator').removeClass('active');
  });

  $('#product_quantity').on('change input', function() {
    var product_count = parseInt($(this).val());
    var max_product_count = parseInt($(this).attr('max'));
    if (product_count > max_product_count) {
      $(this).val(max_product_count);
      product_count = max_product_count;
    };
  });

  $('.owl-carousel').owlCarousel({
    loop: true,
    nav: true,
    margin: 10,
    dots: false,
  });
</script>
